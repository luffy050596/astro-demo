---
import BaseLayout from '../layouts/BaseLayout.astro';

const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["photography", "bird watching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = true;
const goal = 3;
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";

const pageTitle = "About Me";
---

<BaseLayout pageTitle={pageTitle}>
  <style is:global define:vars={{skillColor, fontWeight, textCase}}>
    h1 {
      color: purple;
      font-size: 4rem;
    }
    .skill {
      color: var(--skillColor);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }
  </style>
  <h2>……and My New Astro Website!</h2>

  <p>This is the about page.</p>

  <p>This blog is continuing to be built.</p>
  <p>For more information about me, please see the following:</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country}. My occupation is {identity.occupation}.</li>
    {identity.hobbies.length >= 2 &&
      <li>My two hobbies are {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
  {happy && <p>I'm very happy to learn Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}

  {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
</BaseLayout>